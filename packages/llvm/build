#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

#cd autoconf
#do_autoconf

#cd ..
mkdir -p objdir-target
cd objdir-target

ARCH=$TARGET_ARCH

if [ "$TARGET_ARCH" = i386 ] ; then 
  ARCH="x86,r600"
elif [ "$TARGET_ARCH" = x86_64 ] ; then
  ARCH="x86_64,r600"
elif [ "$TARGET_ARCH" = arm ] ; then
  ARCH="arm"
fi

GCC_NO_LTO=1 GCC_NO_ATOM=1 \
do_configure --host=$TARGET_NAME \
             --build=$TARGET_NAME \
             --enable-polly \
             --enable-optimized \
             --disable-profiling \
             --disable-assertions \
             --disable-expensive-checks \
             --enable-experimental-targets=R600 \
             --disable-debug-runtime \
             --enable-keep-symbols \
             --enable-jit \
             --disable-docs \
             --disable-doxygen \
             --enable-threads \
             --enable-pthreads \
             --enable-pic \
             --enable-shared \
             --enable-embed-stdcxx \
             --enable-timestamps \
             --enable-targets=$ARCH \
             --disable-libffi \
             --disable-ltdl-install \


make
make_install
